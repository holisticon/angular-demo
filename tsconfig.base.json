{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "importHelpers": true,
        "module": "esnext",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "paths": {
            "@holisticon/common": [
                "libs/common/src/index.ts"
            ],
            "@holisticon/common/test": [
                "libs/common/src/test/index.ts"
            ],
            "@holisticon/homepage": [
                "libs/homepage/src/index.ts"
            ],
            "@holisticon/orders": [
                "libs/orders/src/index.ts"
            ],
            "@holisticon/orders/test": [
                "libs/orders/src/test/index.ts"
            ],
            "@holisticon/products": [
                "libs/products/src/index.ts"
            ],
            "@holisticon/products/test": [
                "libs/products/src/test/index.ts"
            ],
            "@holisticon/resource": [
                "libs/resource/src/index.ts"
            ],
            "@holisticon/resource/test": [
                "libs/resource/src/test/index.ts"
            ],
            "@holisticon/routing": [
                "libs/routing/src/index.ts"
            ],
            "@holisticon/routing/test": [
                "libs/routing/src/test/index.ts"
            ],
            "@holisticon/shopping-cart": [
                "libs/shopping-cart/src/index.ts"
            ],
            "@holisticon/shopping-cart/test": [
                "libs/shopping-cart/src/test/index.ts"
            ],
            "@holisticon/user-profile": [
                "libs/user-profile/src/index.ts"
            ],
            "@holisticon/user-profile/test": [
                "libs/user-profile/src/test/index.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
