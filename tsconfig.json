{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@luchsamapparat/common": [
        "libs/common/src/index.ts"
      ],
      "@luchsamapparat/homepage": [
        "libs/homepage/src/index.ts"
      ],
      "@luchsamapparat/orders": [
        "libs/orders/src/index.ts"
      ],
      "@luchsamapparat/orders-common": [
        "libs/orders-common/src/index.ts"
      ],
      "@luchsamapparat/products": [
        "libs/products/src/index.ts"
      ],
      "@luchsamapparat/products-common": [
        "libs/products-common/src/index.ts"
      ],
      "@luchsamapparat/shopping-cart": [
        "libs/shopping-cart/src/index.ts"
      ],
      "@luchsamapparat/shopping-cart-common": [
        "libs/shopping-cart-common/src/index.ts"
      ],
      "@luchsamapparat/user-profile": [
        "libs/user-profile/src/index.ts"
      ],
      "@luchsamapparat/user-profile-common": [
        "libs/user-profile-common/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
